{
  "name": "gh-pages-publish",
  "version": "1.0.0",
  "description": "Console app for publishing on Github Pages",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "./build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitrygvl/gh-pages-publish"
  },
  "keywords": [
    "git",
    "Github",
    "gh-pages",
    "CLI"
  ],
  "author": "dmitrygvl",
  "license": "ISC",
  "bin": {
    "gh-pages-deploy": "build/index.js"
  },
  "scripts": {
    "test": "echo \"no test specified\"",
    "lint": "prettier --check . && eslint . && npx tsc --noEmit",
    "lint:fix": "prettier --write . && eslint . --fix && npx tsc --noEmit",
    "prepare": "husky install",
    "check-ts": "tsc --noEmit",
    "compile": "tsc",
    "start": "nodemon -e ts --exec \"node --loader ts-node/esm index.ts\"",
    "deploy": "node --loader ts-node/esm index.ts deploy",
    "config": "node --loader ts-node/esm index.ts config"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "commander": "^11.1.0",
    "gh-pages": "^6.1.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/gh-pages": "^6.1.0",
    "@types/node": "^20.10.5",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{md,yml,json}": "prettier . --write"
  }
}
